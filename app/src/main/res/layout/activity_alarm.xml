<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#1a1a1a"
    android:padding="20dp"
    android:gravity="center">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="🔔 闹钟响了"
        android:textSize="32sp"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:gravity="center"
        android:layout_marginBottom="30dp" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="#2c3e50">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:id="@+id/psalmTitleText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="诗篇 第23篇"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#ecf0f1"
                android:gravity="center"
                android:layout_marginBottom="16dp" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="#34495e"
                android:padding="16dp">

                <TextView
                    android:id="@+id/psalmContentText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="耶和华是我的牧者，我必不致缺乏..."
                    android:textSize="16sp"
                    android:textColor="#bdc3c7"
                    android:lineSpacingExtra="4dp" />

            </ScrollView>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <Button
            android:id="@+id/stopButton"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:text="停止闹钟"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:background="@drawable/button_stop"
            android:layout_marginBottom="16dp"
            android:elevation="4dp" />

        <Button
            android:id="@+id/snoozeButton"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:text="贪睡 5 分钟"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:background="@drawable/button_snooze"
            android:elevation="4dp" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="正在播放今日诗篇录音..."
        android:textSize="14sp"
        android:textColor="#95a5a6"
        android:gravity="center"
        android:layout_marginTop="20dp" />

</LinearLayout>
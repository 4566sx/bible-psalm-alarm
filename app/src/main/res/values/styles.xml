<resources>
    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here -->
        <item name="colorPrimary">#3498db</item>
        <item name="colorPrimaryDark">#2980b9</item>
        <item name="colorAccent">#e74c3c</item>
        <item name="android:textColorPrimary">#2c3e50</item>
        <item name="android:windowBackground">@color/background_color</item>
    </style>

    <!-- Alarm Activity Theme -->
    <style name="AlarmTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">#1a1a1a</item>
        <item name="android:windowKeepScreenOn">true</item>
    </style>

    <!-- Button Styles -->
    <style name="PrimaryButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">#3498db</item>
        <item name="android:elevation">2dp</item>
    </style>

    <style name="SecondaryButton" parent="PrimaryButton">
        <item name="android:background">#95a5a6</item>
    </style>

    <!-- Text Styles -->
    <style name="TitleText">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#2c3e50</item>
    </style>

    <style name="SubtitleText">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#34495e</item>
    </style>

    <style name="BodyText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#7f8c8d</item>
    </style>

</resources>